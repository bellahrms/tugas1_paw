<img src="/img/banneer.jpg" alt="Cafe Santai" class="img-fluid rounded shadow mb-4">

<h4 class="mb-4 text-2xl font-semibold text-blue-600">Daftar Minuman</h4>

<div class="row">
    <% minuman.forEach(item => { %>
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg h-100">
                <div class="card-body">
                    <h5 class="card-title text-lg font-bold text-center text-brown-600">
                        <%= item.nama %>
                    </h5>
                    <p class="card-text text-gray-700 text-center">
                        <%= item.deskripsi %>
                    </p>
                    <div class="text-center mt-3">
                        <button class="btn btn-primary">Pesan Sekarang</button>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>
