<!-- Gambar Banner -->
<img src="/img/banneer.jpg" alt="Cafe Santai" class="img-fluid rounded shadow mb-4">

<!-- Judul Halaman -->
<h4 class="mb-4 text-2xl font-semibold text-blue-600">
    Daftar Minuman Populer
</h4>

<div class="row">
    <% minuman.forEach(item => { %>
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg h-100">
                <div class="card-body">
                    <!-- Nama Minuman -->
                    <h5 class="card-title text-lg font-bold text-center text-brown-600">
                        <%= item.nama %>
                    </h5>

                    <!-- Deskripsi Minuman -->
                    <p class="card-text text-gray-700 text-center">
                        <%= item.deskripsi %>
                    </p>
                </div>
            </div>
        </div>
    <% }) %>
</div>
